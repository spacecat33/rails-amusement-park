<%= form_tag('/signin', method: :post) do %>
    <%= label_tag(:name, "Your name: ") %>
    <%= collection_select(:user, :name, User.all, :name, :name, prompt: "Plese select your username from this dropdown") %>
    <%= label_tag(:password, "Your password: ") %>
    <%= password_field_tag(:password, nil) %>
    <%= submit_tag("Sign In") %>
<% end %>